#!/bin/sh

set -e

if [ -z "${ND4J_BACKEND}" ];
    then export ND4J_BACKEND="x86" &&  echo "USING BACKEND $ND4J_BACKEND";
fi

export jar_name="./lib/*:/usr/local/Skymind/nd4j/lib/$ND4J_BACKEND/*"
export main_class_name="org.deeplearning4j.cli.driver.CommandLineInterfaceDriver"

export params=""

for i in $*;
do
    export params="$params $i"
done

echo $params
java -cp "$jar_name" "$main_class_name" $params


printf '\n\n'
